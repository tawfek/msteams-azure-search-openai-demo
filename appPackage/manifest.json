{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.lightring.Laila",
    "developer": {
        "name": "Microsoft",
        "websiteUrl": "https://lightring.ai",
        "privacyUrl": "https://lightring.ai/privacy-policy",
        "termsOfUseUrl": "https://lightring.ai/privacy-policy/"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Laila - AI Assistant",
        "full": "Virtual Assistant customised for your business"
    },
    "description": {
        "short": "Ask Laila to help you with your business data",
        "full": "Laila is a virtual assistant that helps you with your business data. You can ask Laila about any thing in any language."
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": [
                {
                    "scopes": [
                        "personal"
                    ],
                    "commands": [
                        {
                            "title": "New chat",
                            "description": "Start a new chat"
                        }
                    ]
                }
            ]
        }
    ],
    "composeExtensions": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}